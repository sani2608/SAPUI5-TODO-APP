<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<Dialog
		contentWidth="30%"
		contentHeight="30%"
		id="editTodoDialog"
		title="{i18n>EditTodoFragment.EditTodo}"
	>
		<content>
			<VBox
				width="90%"
				alignContent="Center"
				class="sapUiSmallMargin"
			>
				<Label
					text="{i18n>EditTodoFragment.Todo}"
					class="sapUiSmallMarginTop"
				/>
				<Input
					id="id_edit_input"
					value="{todosModel>/EditInputField}"
				/>
				<Label
					text="{i18n>EditTodoFragment.Date}"
					class="sapUiSmallMarginTop"
				/>
				<DatePicker
					id="id_edit_datePicker"
					value="{todosModel>/EditDatePickerField}"
				/>
			</VBox>
		</content>
		<beginButton>
			<Button
				text="{i18n>dialogCancelButtonText}"
				press=".onCloseDialog"
				id="id_cancel_btn"
			/>
		</beginButton>
		<endButton>
			<Button
				text="{i18n>dialogSaveButtonText}"
				press=".onCloseDialog"
				id="id_save_btn"
			/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>